<div class="container">
  <h1 id="title">Enter a burger below to order the burger you want to eat!</h1>
  <div class="row">

    <div class="col">
      <h2>Burgers ready to eat!</h2>
      <ul>
        {{#each burgers}}
        {{#unless eatBurger}}
        {{!--> burgers/burger-block is the file location --}}
        {{> burgers/burger-block eat=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col">
      <h2>Burgers you've ate!</h2>
      <ul>
        {{#each burgers}}
        {{#if eatBurger}}
        {{> burgers/burger-block eat=false}}	
        {{/if}}
        {{/each}}
      </ul>
    </div>
    <div class="w-100"></div>

    <div class="col">
      <div id="colorRed">
        <h2>Add a Burger</h2>
        <form class="create-form">

          <div class="form-group">
            <label for="ca">Enter a Burger name:</label>
            <input type="text" id="ca" name="name">
          </div>

          <button type="button submit" class="btn btn-danger">Add Burger</button>

          {{!-- Bad work around, default button to generate burger. --}}
          <div class="form-group">
            <label for="slee"></label><br>
            <input type="radio" name="eatBurger" value="0" hidden checked><br>
            {{!-- <input type="radio" name="eatBurger" value="1"> --}}
          </div>
      </div>

      </form>
      <br>
      <br>
    </div>

  </div>
</div>