<h1>Enter a burger below to order the burger you want to eat!</h1>

<div class="container">
  <div class="row">

    <div class="col">
    <h2>Burgers ready to eat!</h2>
      <ul>
        {{#each burgers}}
        {{#unless eatBurger}}
        {{> burgers/burger-block eat=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col">
    <h2>Burgers you've ate!</h2>
      <ul>
        {{#each burgers}}
        {{#if eatBurger}}
        {{> burgers/burger-block eat=false visible=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
    <div class="w-100"></div>
    {{!-- <div class="col">col3</div>
    <div class="col">col4</div> --}}





  </div>
</div>
<div class="col">
<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Enter a Burger name:</label>
    <input type="text" id="ca" name="name">
  </div>

  {{!-- Bad work around, default button to generate burger. --}}
  <div class="form-group">
    <label for="slee"></label><br>
    <input type="radio" name="eatBurger" value="0" hidden checked><br>
    {{!-- <input type="radio" name="eatBurger" value="1"> --}}
  </div>

  <button type="submit">Add Burger</button>
</form>
<br>
<br>
</div>